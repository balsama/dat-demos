{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "php": ">=5.6",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal-tome/tome_drush": "dev-master",
        "drupal/console": "^1.0.2",
        "drupal/core": "8.7.0-alpha2",
        "drupal/layout_builder_restrictions": "^1.4",
        "drupal/tome": "^1.0@beta",
        "drush/drush": "~9.5.2",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {},
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.0.8"
        },
        "preferred-install": {
            "drupal/core": "dist"
        },
        "process-timeout": 0
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "refresh-content": [
            "drush pm:uninstall demo_umami_content && drush pm:enable demo_umami_content"
        ],
        "run-server": [
            "cd docroot && php core/scripts/drupal server --no-interaction"
        ],
        "use-dev": [
            "mv docroot/sites/default/disabled.settings.local.php docroot/sites/default/settings.local.php"
        ],
        "use-exported": [
            "mv docroot/sites/default/settings.local.php docroot/sites/default/disabled.settings.local.php"
        ],
        "quick-start": [
            "@composer install",
            "@composer run-server"
        ],
        "hard-reset": [
            "drush si --db-url=sqlite://fixtures/dev/sqlite/.ht.sqlite --existing-config --account-pass=admin --yes",
            "@composer refresh-content",
            "@composer run-server"
        ],
        "export-db": [
            "cp docroot/fixtures/sqlite/dev/.ht* docroot/fixtures/sqlite/",
            "drush cex --yes"
        ],
        "reset-db": [
            "cp docroot/fixtures/sqlite/.ht* docroot/fixtures/sqlite/dev",
            "drush cex --yes"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "2995689: Allow reordering blocks without a pointer device":
                "https://www.drupal.org/files/issues/2019-03-20/2995689-112.patch",
                "2959493: Allow Layout Builder live previews to be toggled to allow easier drag-and-drop":
                "https://www.drupal.org/files/issues/2019-03-20/2959493-126.patch",
                "2988970: Layout Builder should make it easier to modify the default layout for an entity type when viewing an entity":
                "https://www.drupal.org/files/issues/2019-02-28/2988970-54.patch",
                "2938182: Design intuitive affordances for Layout Builder (for illustrating which parts of the page are editable in a given context)":
                "https://www.drupal.org/files/issues/2019-02-27/2938182-27.patch",
                "remove hook_install from umami":
                "./patches/umami-install-02.patch",
                "2998091: Make remote videos responsive":
                "https://www.drupal.org/files/issues/2019-03-11/2998091-75.patch"
            },
            "drupal-tome/tome_drush" :{
                "Add support for passing Drush site aliases":
                "./patches/tome_drush-04.patch"
            },
            "drupal/tome": {
                "Remove save event subscriber action and dont update from CLI":
                "./patches/tome15.patch"
            }
        },
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        }
    }
}
