{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "php": ">=5.6",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal-tome/tome_drush": "dev-master",
        "drupal/console": "^1.0.2",
        "drupal/core": "8.7.x-dev#903e872",
        "drupal/layout_builder_restrictions": "^1.4",
        "drupal/tome": "^1.0@beta",
        "drush/drush": "^9.0.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {},
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.0.8"
        },
        "preferred-install": {
            "drupal/core": "dist"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "2988970: Layout Builder should make it easier to modify the default layout for an entity type when viewing an entity":
                "https://www.drupal.org/files/issues/2019-02-28/2988970-54.patch",
                "2938182: Design intuitive affordances for Layout Builder (for illustrating which parts of the page are editable in a given context)":
                "https://www.drupal.org/files/issues/2019-02-27/2938182-27.patch",
                "2959493: Allow Layout Builder live previews to be toggled to allow easier drag-and-drop":
                "https://www.drupal.org/files/issues/2019-02-28/2959493-56.patch",
                "3002608: Remove contextual links not related to layout administration inside layout builder blocks":
                "https://www.drupal.org/files/issues/2019-03-01/3002608-62.patch",
                "3023801: Allow newly uploaded files to be deleted from the media library without saving them":
                "https://www.drupal.org/files/issues/2019-02-28/3023801-30.patch",
                "2981044: Unify the grid/table views of the media library":
                "https://www.drupal.org/files/issues/2019-02-27/2981044-69.patch"
            },
            "drupal/tome": {
                "Account for ephemeral storage":
                "./patches/tome9.patch"
            },
            "drupal-tome/tome_drush" :{
                "Allow aliases":
                "./patches/tome_drush-02.patch"
            }
        },
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        }
    }
}
